<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/foreground"
    tools:context=".DetailsActivity">

    <TextView
        android:id="@+id/details_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/details_description"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/details_description"
        app:layout_constraintTop_toBottomOf="@+id/details_notes_titel" />

    <TextView
        android:id="@+id/details_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/details_definition"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/details_definition"
        app:layout_constraintTop_toBottomOf="@+id/details_description_titel" />

    <TextView
        android:id="@+id/details_definition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/details_definition_titel"
        app:layout_constraintTop_toBottomOf="@+id/details_definition_titel" />

    <TextView
        android:id="@+id/details_notes_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/notes_txt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/details_definition_titel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/details_definition_titel"
        app:layout_constraintTop_toBottomOf="@+id/details_description" />

    <TextView
        android:id="@+id/details_description_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/description_txt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/details_definition_titel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/details_definition_titel"
        app:layout_constraintTop_toBottomOf="@+id/details_definition" />

    <TextView
        android:id="@+id/details_definition_titel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="@string/definition_txt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/details_pronunciation"
        android:layout_width="190dp"
        android:layout_height="19dp"
        android:text="pronounciation"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/details_rating"
        app:layout_constraintStart_toStartOf="@+id/details_titel" />

    <TextView
        android:id="@+id/details_titel"
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:gravity="center_vertical"
        android:text="Titel"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/details_pronunciation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/details_rating"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="9.9"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/details_cancel_button"
        app:layout_constraintEnd_toEndOf="@+id/details_titel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/details_titel" />

    <ImageView
        android:id="@+id/details_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/details_titel"
        app:layout_constraintEnd_toStartOf="@+id/details_definition_titel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/backgrounds/scenic[5]" />

    <Button
        android:id="@+id/details_delete_button"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:text="@string/delete_txt"
        app:layout_constraintBottom_toBottomOf="@+id/details_cancel_button"
        app:layout_constraintEnd_toStartOf="@+id/details_edit_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/details_cancel_button"
        app:layout_constraintTop_toTopOf="@+id/details_cancel_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/details_cancel_button"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:text="@string/cancel_txt"
        app:layout_constraintBottom_toBottomOf="@+id/details_edit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/details_edit_button"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/details_edit_button"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:text="@string/edit_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>